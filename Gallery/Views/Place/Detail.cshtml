@using Gallery.Models
@model PhotoViewModel

@{
    ViewData["Title"] = "Photo " + Model.PhotoNum;
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=DM+Mono:ital,wght@0,300;0,400;0,500;1,400&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'DM Mono', monospace; }
        ::-webkit-scrollbar { display: none; }
    </style>
</head>
<body class="bg-[#F0F0F0] text-[#111] h-[100dvh] w-screen flex flex-col overflow-hidden selection:bg-black selection:text-white">

    <header class="flex justify-between items-center px-5 md:px-12 h-20 shrink-0 z-20">
        
        <a href="@Url.Action("Index", "Place", new { id = Model.PlaceId })" 
           class="group inline-flex items-center justify-center w-8 h-8 rounded-full border border-gray-300 text-gray-500 hover:border-gray-400 hover:text-black transition-all duration-300"
           aria-label="Close">
            <span class="text-[10px] font-mono tracking-[0.1em] uppercase pt-px">
                <svg width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </span>
        </a>

        <div class="flex gap-4 text-gray-500">
            @if (Model.PrevPhoto.HasValue)
            {
                <a href="@Url.Action("Detail", "Place", new { placeId = Model.PlaceId, photoNum = Model.PrevPhoto.Value })" 
                   class="group inline-flex items-center justify-center w-8 h-8 rounded-full border border-gray-300 hover:border-gray-400 hover:text-black transition-all duration-300"
                   aria-label="Previous Photo">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M19 12H5"/><path d="m12 19-7-7 7-7"/></svg>
                </a>
            }
            else
            {
                <span class="inline-flex items-center justify-center w-8 h-8 rounded-full border border-gray-200 text-gray-300 cursor-default">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M19 12H5"/><path d="m12 19-7-7 7-7"/></svg>
                </span>
            }

            @if (Model.NextPhoto.HasValue)
            {
                <a href="@Url.Action("Detail", "Place", new { placeId = Model.PlaceId, photoNum = Model.NextPhoto.Value })" 
                   class="group inline-flex items-center justify-center w-8 h-8 rounded-full border border-gray-300 hover:border-gray-400 hover:text-black transition-all duration-300"
                   aria-label="Next Photo">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
                </a>
            }
            else
            {
                <span class="inline-flex items-center justify-center w-8 h-8 rounded-full border border-gray-200 text-gray-300 cursor-default">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
                </span>
            }
        </div>
    </header>

    <main class="flex-grow flex items-center justify-center p-4 md:p-8 relative w-full h-full overflow-hidden">
        
        <img src="/images/places/@(Model.PlaceId)/@(Model.PhotoNum).jpg" 
             alt="Photo @Model.PhotoNum" 
             class="max-h-[75vh] w-auto max-w-[95vw] md:max-w-[85vw] object-contain shadow-2xl block"
             onerror="this.src='/images/places/@(Model.PlaceId)/@(Model.PhotoNum).png';" />

    </main>

    <footer class="flex justify-between items-end px-5 md:px-12 h-20 pb-8 shrink-0 z-20">
        <div class="flex flex-col gap-1">
            <span class="text-black text-[10px] uppercase tracking-widest font-mono font-medium">@Model.PlaceName</span>
            <span class="text-gray-500 text-[10px] uppercase tracking-widest font-mono">@Model.Location, @Model.Country</span>
        </div>
        <div class="flex flex-col gap-1 text-right">
            <div class="flex gap-2 justify-end text-black text-[10px] font-mono">
                <span>@Model.PhotoNum.ToString("D2")</span>
                <span class="text-gray-400">â–¶</span>
                <span class="text-gray-400">@Model.TotalPhotos</span>
            </div>
            <span class="text-gray-400 text-[10px] uppercase tracking-widest font-mono">@Model.UniqueId</span>
        </div>
    </footer>

</body>
</html>