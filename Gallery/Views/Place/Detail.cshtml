@using Gallery.Models
@model PhotoViewModel

@{
    ViewData["Title"] = "Photo " + Model.PhotoNum;
    Layout = null;


}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=DM+Mono:ital,wght@0,300;0,400;0,500;1,400&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'DM Mono', monospace; }
        ::-webkit-scrollbar { display: none; }
    </style>
</head>
<body class="bg-[#F0F0F0] text-[#111] h-[100dvh] w-screen flex flex-col overflow-hidden selection:bg-black selection:text-white">

    <header class="flex justify-between items-center px-5 md:px-12 h-20 shrink-0 z-20">

        <a href="@Url.Action("Index", "Place", new { id = Model.PlaceId })"
           class="group inline-flex items-center gap-3 text-gray-400 hover:text-black transition-colors duration-300">
            <span class="text-[10px] font-mono tracking-[0.2em] uppercase pt-px">Close</span>
        </a>

        <div class="flex gap-6 md:gap-8 text-gray-400">
            @if (Model.PrevPhoto.HasValue)
            {
                <a href="@Url.Action("Detail", "Place", new { placeId = Model.PlaceId, photoNum = Model.PrevPhoto.Value })"
                   class="p-2 -mr-2 hover:text-black transition-colors duration-300">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M19 12H5"/><path d="m12 19-7-7 7-7"/></svg>
                </a>
            }
            else
            {
                <span class="p-2 -mr-2 opacity-20 cursor-default">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M19 12H5"/><path d="m12 19-7-7 7-7"/></svg>
                </span>
            }

            @if (Model.NextPhoto.HasValue)
            {
                <a href="@Url.Action("Detail", "Place", new { placeId = Model.PlaceId, photoNum = Model.NextPhoto.Value })"
                   class="p-2 -mr-2 hover:text-black transition-colors duration-300">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
                </a>
            }
            else
            {
                <span class="p-2 -mr-2 opacity-20 cursor-default">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
                </span>
            }
        </div>
    </header>

    <main class="flex-grow flex items-center justify-center p-4 relative w-full overflow-hidden">

        <div class="bg-white shadow-[0_20px_40px_-12px_rgba(0,0,0,0.15)] md:shadow-[0_30px_60px_-15px_rgba(0,0,0,0.2)]
                    p-2.5 pb-10 md:p-4 md:pb-20
                    max-h-full max-w-full flex flex-col justify-center
                    transition-all duration-300 ease-out">

            <div class="relative bg-gray-100 border border-black/5 overflow-hidden max-h-[65vh] max-w-[90vw] md:max-w-[80vw] flex items-center justify-center">

                <img src="/images/places/@(Model.PlaceId)/@(Model.PhotoNum).jpg"
                     alt="Photo @Model.PhotoNum"
                     class="max-h-[65vh] max-w-full h-auto w-auto object-contain block"
                     onerror="this.src='/images/places/@(Model.PlaceId)/@(Model.PhotoNum).png'; this.onerror=function(){this.src='/images/places/@(Model.PlaceId)/@(Model.PhotoNum).jpeg'; this.onerror=null;};" />

                <div class="absolute inset-0 shadow-[inset_0_0_20px_rgba(0,0,0,0.05)] pointer-events-none z-10"></div>

            </div>

        </div>

    </main>

    <footer class="flex justify-between items-end px-5 md:px-12 h-20 pb-8 shrink-0 z-20">

        <div class="flex flex-col gap-1">
            <span class="text-black text-[10px] uppercase tracking-widest font-mono font-medium">@Model.PlaceName</span>
            <span class="text-gray-400 text-[10px] uppercase tracking-widest font-mono">@Model.Location, @Model.Country</span>
        </div>

        <div class="flex flex-col gap-1 text-right">
            <div class="flex gap-2 justify-end text-black text-[10px] font-mono">
                <span>@Model.PhotoNum.ToString("D2")</span>
                <span class="text-gray-300">â–¶</span>
                <span class="text-gray-300">@Model.TotalPhotos</span>
            </div>
            <span class="text-gray-400 text-[10px] uppercase tracking-widest font-mono">@Model.UniqueId</span>
        </div>
    </footer>

</body>
</html>
