@{
// Helper function to convert the current year to Roman Numerals
string ToRoman(int number)
{
if (number < 1) return string.Empty;
if (number >= 1000) return "M" + ToRoman(number - 1000);
if (number >= 900) return "CM" + ToRoman(number - 900);
if (number >= 500) return "D" + ToRoman(number - 500);
if (number >= 400) return "CD" + ToRoman(number - 400);
if (number >= 100) return "C" + ToRoman(number - 100);
if (number >= 90) return "XC" + ToRoman(number - 90);
if (number >= 50) return "L" + ToRoman(number - 50);
if (number >= 40) return "XL" + ToRoman(number - 40);
if (number >= 10) return "X" + ToRoman(number - 10);
if (number >= 9) return "IX" + ToRoman(number - 9);
if (number >= 5) return "V" + ToRoman(number - 5);
if (number >= 4) return "IV" + ToRoman(number - 4);
if (number >= 1) return "I" + ToRoman(number - 1);
return string.Empty;
}

var currentYear = ToRoman(DateTime.Now.Year);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Preload critical fonts -->
    <link rel="preload" href="~/fonts/lora/lora-italic-400.ttf" as="font" type="font/ttf" crossorigin />
    <link rel="preload" href="~/fonts/dm-mono/dm-mono-400.ttf" as="font" type="font/ttf" crossorigin />

    <link rel="stylesheet" href="~/css/fonts.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.compiled.css" asp-append-version="true" />

    <style>
        :root {
            --font-serif: 'Lora', serif;
            --font-mono: 'DM Mono', monospace;
        }

        body {
            font-family: var(--font-serif);
            /* Lora is very legible, so we can use standard sizing */
            font-size: 1.05rem;
            line-height: 1.7;
            /* Lighter tracking gives it room to breathe */
            letter-spacing: 0.01em;
        }

        .font-mono {
            font-family: var(--font-mono);
            font-size: 0.75rem;
            letter-spacing: 0.05em;
        }

        /* Make the headers feel softer */
        h1, h2, h3, .italic {
            font-style: italic;
        }

        html { scroll-behavior: smooth; }
    </style>
</head>
<body class="bg-[#FCFCFA] text-[#222] antialiased selection:bg-gray-900 selection:text-white flex flex-col">

<main role="main" class="flex-grow w-full">
    @RenderBody()
</main>

@{
    var isDevelopment = Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development";
    var jsFile = isDevelopment ? "~/js/site.js" : "~/js/site.min.js";
}
<script src="@jsFile" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
