@using Gallery.Models
@model LoginViewModel
@{
    ViewData["Title"] = "Admin";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/fonts.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.compiled.css" asp-append-version="true" />
    <style>
        body { font-family: 'Inter', sans-serif; }
        .font-serif { font-family: 'DM Serif Display', serif; }
        ::-webkit-scrollbar { display: none; }
    </style>
</head>
<body class="bg-[#F0F0F0] min-h-screen flex flex-col items-center justify-center p-6 text-[#111] selection:bg-black selection:text-white">

    <div class="w-full max-w-[320px]">
        <div class="bg-white p-8 border border-gray-200 shadow-sm">
            <form class="space-y-6" asp-action="Login" method="post">
                @Html.AntiForgeryToken()

                @if (ViewBag.Error != null)
                {
                    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded text-sm">
                        @ViewBag.Error
                    </div>
                }

                <div class="space-y-1">
                    <input asp-for="Username"
                           class="block w-full border-b border-gray-200 bg-transparent py-2 text-sm font-sans placeholder-gray-400 focus:border-black focus:outline-none transition-colors rounded-none"
                           placeholder="Username"
                           autocomplete="username">
                    <span asp-validation-for="Username" class="text-red-500 text-[9px]"></span>
                </div>

                <div class="space-y-1">
                    <input asp-for="Password"
                           class="block w-full border-b border-gray-200 bg-transparent py-2 text-sm font-sans placeholder-gray-400 focus:border-black focus:outline-none transition-colors rounded-none"
                           placeholder="Password"
                           type="password"
                           autocomplete="current-password">
                    <span asp-validation-for="Password" class="text-red-500 text-[9px]"></span>
                </div>

                <div class="space-y-1">
                    <input type="text" name="totpCode" id="totpCode"
                           class="block w-full border-b border-gray-200 bg-transparent py-2 text-sm font-sans placeholder-gray-400 focus:border-black focus:outline-none transition-colors rounded-none font-mono text-center tracking-widest"
                           placeholder="2FA Code (if enabled)"
                           maxlength="6"
                           pattern="[0-9]*"
                           autocomplete="one-time-code">
                    <p class="text-[9px] text-gray-400 mt-1">Enter 6-digit code from your authenticator app</p>
                </div>

                <div class="flex items-center pt-2">
                    <input asp-for="RememberMe"
                           type="checkbox"
                           class="h-3 w-3 border-gray-300 rounded focus:ring-black focus:ring-offset-0">
                    <label asp-for="RememberMe" class="ml-2 text-[9px] text-gray-600 uppercase tracking-wider">
                        Remember Me
                    </label>
                </div>

                <button type="submit"
                        class="w-full bg-black mt-4 py-3 text-white text-[10px] uppercase tracking-[0.2em] hover:bg-neutral-800 transition-colors">
                    Sign In
                </button>
            </form>
        </div>

        <div class="mt-6 text-center text-[9px] text-gray-400 uppercase tracking-wider">
            <p>Gallery Admin Panel</p>
        </div>

    </div>

    <script>
        // Auto-format TOTP code input
        document.getElementById('totpCode').addEventListener('input', function(e) {
            e.target.value = e.target.value.replace(/\D/g, '');
        });
    </script>

</body>
</html>
