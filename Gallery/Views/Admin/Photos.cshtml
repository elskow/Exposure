@using Gallery.Models
@model PlaceDetailPage
@{
    ViewData["Title"] = "Photo Manager";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/fonts.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.compiled.css" asp-append-version="true" />

    <!-- FilePond CSS -->
    <link rel="stylesheet" href="~/lib/filepond/filepond.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/filepond/filepond-plugin-image-preview.min.css" asp-append-version="true" />

    <style>
        body { font-family: 'Inter', sans-serif; }
        .font-mono { font-family: 'DM Mono', monospace; }
        ::-webkit-scrollbar { display: none; }

        .photo-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 1rem;
        }

        .photo-item {
            position: relative;
            aspect-ratio: 1;
            border-radius: 0.5rem;
            overflow: hidden;
            background: #f3f4f6;
            cursor: move;
        }

        .photo-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .photo-item:hover .photo-actions {
            opacity: 1;
        }

        .photo-actions {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            opacity: 0;
            transition: opacity 0.2s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .drag-over {
            border: 2px dashed #000;
            background: #f9fafb;
        }
    </style>
</head>
<body class="bg-white text-[#111] min-h-screen p-6 md:p-12 selection:bg-black selection:text-white antialiased">

    <div class="max-w-6xl mx-auto">

        <header class="flex justify-between items-end border-b border-gray-100 pb-6 mb-8">
            <div>
                <h1 class="text-2xl font-medium tracking-tight text-black">Photo Manager</h1>
                <p class="text-gray-500 mt-1 text-sm">@Model.Name Â· @Model.Location, @Model.Country</p>
                <div class="flex gap-4 mt-2 text-[10px] text-gray-400 uppercase tracking-widest font-mono">
                    <span>@Model.TotalPhotos Photos</span>
                </div>
            </div>
            <a href="/admin/edit/@Model.PlaceSlug" class="text-[10px] uppercase tracking-widest font-mono hover:text-gray-500 transition-colors">
                &larr; Back to Edit
            </a>
        </header>

        <!-- Anti-forgery token for AJAX requests -->
        @Html.AntiForgeryToken()

        <!-- Upload Section with FilePond -->
        <div class="mb-8">
            <h2 class="text-sm font-medium text-gray-900 mb-4">Upload Photos</h2>
            <input type="file"
                   id="fileInput"
                   class="filepond"
                   name="filepond"
                   multiple
                   data-max-file-size="50MB"
                   data-max-files="50">
        </div>

        <!-- Photo Grid -->
        @if (Model.TotalPhotos > 0)
        {
            <div class="mb-8">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-sm font-medium text-gray-900">Current Photos</h2>
                    <div class="flex items-center gap-3">
                        <p id="reorderHint" class="text-xs text-gray-500 font-mono">Drag to reorder</p>
                        <div id="reorderActions" style="display: none;" class="flex items-center gap-2">
                            <span class="text-xs text-amber-600 font-medium">Unsaved changes</span>
                            <button type="button" onclick="cancelReorder()"
                                    class="inline-flex items-center px-3 py-1.5 border border-gray-300 text-xs font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black transition-all">
                                Cancel
                            </button>
                            <button type="button" onclick="savePhotoOrder()"
                                    class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-white bg-black hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black transition-all">
                                <svg class="mr-1.5 h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                                Save Order
                            </button>
                        </div>
                    </div>
                </div>

                <div class="photo-grid" id="photoGrid">
                    @foreach (var photo in Model.Photos)
                    {
                        <div class="photo-item group" data-photo-num="@photo.Num" draggable="true"
                             ondragstart="handlePhotoStart(event)"
                             ondragend="handlePhotoEnd(event)">
                            @{
                                var nameWithoutExt = System.IO.Path.GetFileNameWithoutExtension(photo.FileName);
                                var smallFileName = nameWithoutExt + "-small.webp";
                            }
                            <img src="/images/places/@(Model.PlaceId)/@smallFileName"
                                 alt="Photo @photo.Num"
                                 loading="lazy"
                                 onerror="this.src='/images/places/@(Model.PlaceId)/@(photo.FileName)';" />

                            @if (photo.IsFavorite)
                            {
                                <div class="absolute top-2 right-2 bg-amber-500 text-white p-1.5 rounded-full shadow-lg z-10">
                                    <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                                    </svg>
                                </div>
                            }

                            <div class="photo-actions">
                                <span class="text-white text-xs font-mono bg-black/30 px-2 py-1 rounded">
                                    #@photo.Num
                                </span>
                                <button type="button" onclick="toggleFavorite(@Model.PlaceId, @photo.Num, @(photo.IsFavorite ? "false" : "true"))"
                                        class="p-2 @(photo.IsFavorite ? "bg-amber-500 hover:bg-amber-600" : "bg-gray-600 hover:bg-gray-700") text-white rounded-md transition-colors"
                                        title="@(photo.IsFavorite ? "Remove from favorite" : "Set as favorite")">
                                    <svg class="h-4 w-4" fill="@(photo.IsFavorite ? "currentColor" : "none")" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                                    </svg>
                                </button>
                                <button type="button" onclick="deletePhoto(@Model.PlaceId, @photo.Num)"
                                        class="p-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition-colors">
                                    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-12 bg-gray-50 rounded-lg border border-gray-200">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <p class="mt-4 text-sm text-gray-500">No photos yet. Upload some to get started.</p>
            </div>
        }
    </div>

    <!-- FilePond Scripts -->
    <script src="~/lib/filepond/filepond.min.js" asp-append-version="true"></script>
    <script src="~/lib/filepond/filepond-plugin-image-preview.min.js" asp-append-version="true"></script>
    <script src="~/lib/filepond/filepond-plugin-file-validate-type.min.js" asp-append-version="true"></script>
    <script src="~/lib/filepond/filepond-plugin-file-validate-size.min.js" asp-append-version="true"></script>
    <script src="~/lib/filepond/filepond-plugin-image-validate-size.min.js" asp-append-version="true"></script>

    <script>
        const placeId = @Model.PlaceId;

        // Register FilePond plugins
        FilePond.registerPlugin(
            FilePondPluginImagePreview,
            FilePondPluginFileValidateType,
            FilePondPluginFileValidateSize,
            FilePondPluginImageValidateSize
        );

        // Get anti-forgery token
        const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

        // Initialize FilePond
        const inputElement = document.querySelector('#fileInput');
        const pond = FilePond.create(inputElement, {
            allowMultiple: true,
            maxFiles: 50,
            maxFileSize: '50MB',
            acceptedFileTypes: ['image/jpeg', 'image/jpg', 'image/png', 'image/webp'],
            imageValidateSizeMinWidth: 100,
            imageValidateSizeMinHeight: 100,
            imageValidateSizeMaxWidth: 10000,
            imageValidateSizeMaxHeight: 10000,
            labelIdle: 'Drag & Drop your photos or <span class="filepond--label-action">Browse</span>',
            labelFileProcessing: 'Uploading',
            labelFileProcessingComplete: 'Upload complete',
            labelFileProcessingAborted: 'Upload cancelled',
            labelFileProcessingError: 'Error during upload',
            labelTapToCancel: 'tap to cancel',
            labelTapToRetry: 'tap to retry',
            labelTapToUndo: 'tap to undo',
            labelButtonRemoveItem: 'Remove',
            labelButtonAbortItemLoad: 'Abort',
            labelButtonRetryItemLoad: 'Retry',
            labelButtonAbortItemProcessing: 'Cancel',
            labelButtonUndoItemProcessing: 'Undo',
            labelButtonRetryItemProcessing: 'Retry',
            labelButtonProcessItem: 'Upload',
            credits: false,
            instantUpload: true,

            // Server configuration
            server: {
                process: (fieldName, file, metadata, load, error, progress, abort) => {
                    const formData = new FormData();
                    formData.append('placeId', placeId);
                    formData.append('files', file, file.name);
                    formData.append('__RequestVerificationToken', token);

                    const request = new XMLHttpRequest();
                    request.open('POST', '/admin/photos/upload');

                    request.upload.onprogress = (e) => {
                        progress(e.lengthComputable, e.loaded, e.total);
                    };

                    request.onload = function() {
                        if (request.status >= 200 && request.status < 300) {
                            try {
                                const result = JSON.parse(request.response);
                                if (result.success) {
                                    load(request.responseText);
                                } else {
                                    error(result.message || 'Upload failed');
                                }
                            } catch (e) {
                                error('Invalid response from server');
                            }
                        } else {
                            error('Upload failed');
                        }
                    };

                    request.onerror = function() {
                        error('Upload failed');
                    };

                    request.send(formData);

                    return {
                        abort: () => {
                            request.abort();
                            abort();
                        }
                    };
                }
            },

            // Callbacks
            onprocessfiles: () => {
                // All files have been uploaded
                setTimeout(() => {
                    // Cache-busting reload to ensure fresh data
                    window.location.href = window.location.pathname + '?t=' + Date.now();
                }, 1000);
            }
        });

        // Drag and drop for photo reordering
        let draggedElement = null;
        let hasReordered = false;
        let originalOrder = [];

        // Store original order on page load
        document.addEventListener('DOMContentLoaded', function() {
            originalOrder = Array.from(document.querySelectorAll('.photo-item')).map(el => el.dataset.photoNum);
        });

        function handlePhotoStart(e) {
            draggedElement = e.target.closest('.photo-item');
            e.dataTransfer.effectAllowed = 'move';
            draggedElement.style.opacity = '0.5';
        }

        function handlePhotoEnd(e) {
            if (draggedElement) {
                draggedElement.style.opacity = '1';
                draggedElement = null;
            }

            // Show save button if order changed
            if (hasReordered) {
                document.getElementById('reorderActions').style.display = 'flex';
                document.getElementById('reorderHint').style.display = 'none';
            }
        }

        function cancelReorder() {
            // Reload page to restore original order
            location.reload();
        }

        async function savePhotoOrder() {
            const photoItems = Array.from(document.querySelectorAll('.photo-item'));
            const newOrder = photoItems.map(el => parseInt(el.dataset.photoNum));

            console.log('Saving photo order:', newOrder);

            try {
                const formData = new FormData();
                formData.append('placeId', placeId);
                // Send each order value with indexed key for proper array binding in ASP.NET Core
                newOrder.forEach((num, index) => {
                    formData.append(`order[${index}]`, num);
                });

                // Get anti-forgery token
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                formData.append('__RequestVerificationToken', token);

                const response = await fetch('/admin/photos/reorder', {
                    method: 'POST',
                    body: formData,
                    cache: 'no-store'
                });

                const result = await response.json();

                if (result.success) {
                    hasReordered = false;
                    document.getElementById('reorderActions').style.display = 'none';
                    document.getElementById('reorderHint').style.display = 'block';
                    // Cache-busting reload to ensure fresh data
                    window.location.href = window.location.pathname + '?t=' + Date.now();
                } else {
                    alert('Failed to save order: ' + result.message);
                }
            } catch (error) {
                console.error('Reorder error:', error);
                alert('Failed to save order. Please try again.');
            }
        }

        // Add drag over handlers to photo items
        document.addEventListener('DOMContentLoaded', function() {
            const photoItems = document.querySelectorAll('.photo-item');

            photoItems.forEach(item => {
                item.addEventListener('dragover', function(e) {
                    e.preventDefault();
                    if (draggedElement && draggedElement !== this) {
                        const grid = document.getElementById('photoGrid');
                        const allItems = Array.from(grid.children);
                        const draggedIndex = allItems.indexOf(draggedElement);
                        const targetIndex = allItems.indexOf(this);

                        if (draggedIndex < targetIndex) {
                            this.parentNode.insertBefore(draggedElement, this.nextSibling);
                        } else {
                            this.parentNode.insertBefore(draggedElement, this);
                        }
                        hasReordered = true;
                    }
                });
            });
        });

        async function toggleFavorite(placeId, photoNum, isFavorite) {
            try {
                const formData = new FormData();
                formData.append('placeId', placeId);
                formData.append('photoNum', photoNum);
                formData.append('isFavorite', isFavorite);

                // Get anti-forgery token
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                formData.append('__RequestVerificationToken', token);

                const response = await fetch('/admin/photos/favorite', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    // Cache-busting reload to ensure fresh data
                    window.location.href = window.location.pathname + '?t=' + Date.now();
                } else {
                    alert('Failed to set favorite: ' + result.message);
                }
            } catch (error) {
                console.error('Favorite error:', error);
                alert('Failed to set favorite. Please try again.');
            }
        }

        async function deletePhoto(placeId, photoNum) {
            if (!confirm(`Are you sure you want to delete photo #${photoNum}?`)) {
                return;
            }

            try {
                const formData = new FormData();
                formData.append('placeId', placeId);
                formData.append('photoNum', photoNum);

                // Get anti-forgery token
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                formData.append('__RequestVerificationToken', token);

                const response = await fetch('/admin/photos/delete', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    // Cache-busting reload to ensure fresh data
                    window.location.href = window.location.pathname + '?t=' + Date.now();
                } else {
                    alert('Failed to delete photo: ' + result.message);
                }
            } catch (error) {
                console.error('Delete error:', error);
                alert('Failed to delete photo. Please try again.');
            }
        }
    </script>

</body>
</html>
