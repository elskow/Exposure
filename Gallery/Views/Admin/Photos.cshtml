@using Gallery.Models
@model PlaceDetailPage
@{
    ViewData["Title"] = "Photo Manager";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=DM+Mono:wght@300;400;500&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; }
        .font-mono { font-family: 'DM Mono', monospace; }
        ::-webkit-scrollbar { display: none; }

        .photo-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 1rem;
        }

        .photo-item {
            position: relative;
            aspect-ratio: 1;
            border-radius: 0.5rem;
            overflow: hidden;
            background: #f3f4f6;
            cursor: move;
        }

        .photo-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .photo-item:hover .photo-actions {
            opacity: 1;
        }

        .photo-actions {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            opacity: 0;
            transition: opacity 0.2s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .drag-over {
            border: 2px dashed #000;
            background: #f9fafb;
        }
    </style>
</head>
<body class="bg-white text-[#111] min-h-screen p-6 md:p-12 selection:bg-black selection:text-white antialiased">

    <div class="max-w-6xl mx-auto">

        <header class="flex justify-between items-end border-b border-gray-100 pb-6 mb-8">
            <div>
                <h1 class="text-2xl font-medium tracking-tight text-black">Photo Manager</h1>
                <p class="text-gray-500 mt-1 text-sm">@Model.Name Â· @Model.Location, @Model.Country</p>
                <div class="flex gap-4 mt-2 text-[10px] text-gray-400 uppercase tracking-widest font-mono">
                    <span>@Model.TotalPhotos Photos</span>
                </div>
            </div>
            <a href="/admin/edit/@Model.PlaceId" class="text-[10px] uppercase tracking-widest font-mono hover:text-gray-500 transition-colors">
                &larr; Back to Edit
            </a>
        </header>

        <!-- Upload Section -->
        <div class="mb-8 border-2 border-dashed border-gray-300 rounded-lg p-8 text-center transition-colors hover:border-gray-400"
             id="dropzone"
             ondrop="handleDrop(event)"
             ondragover="handleDragOver(event)"
             ondragleave="handleDragLeave(event)">
            <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8"
                      stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            <p class="mt-4 text-sm font-medium text-gray-900">
                Drag and drop photos here
            </p>
            <p class="mt-1 text-xs text-gray-500">
                or click to select files
            </p>
            <input type="file" id="fileInput" multiple accept="image/*" class="hidden" onchange="handleFileSelect(event)">
            <button type="button" onclick="document.getElementById('fileInput').click()"
                    class="mt-4 inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black transition-all">
                <svg class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Select Files
            </button>
        </div>

        <!-- Upload Queue -->
        <div id="uploadQueue" class="mb-8 hidden">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-sm font-medium text-gray-900">Upload Queue</h2>
                <button type="button" onclick="clearQueue()" class="text-xs text-gray-500 hover:text-gray-700 font-mono uppercase tracking-wider">
                    Clear All
                </button>
            </div>
            <div id="fileList" class="space-y-3 mb-4">
                <!-- File items will be inserted here -->
            </div>
            <div class="flex gap-3">
                <button type="button" onclick="startUpload()" id="uploadBtn"
                        class="flex-1 inline-flex justify-center items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-black hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black transition-all">
                    <svg class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                    </svg>
                    Upload <span id="fileCount" class="ml-1 font-mono">0</span> Files
                </button>
                <button type="button" onclick="cancelUpload()"
                        class="px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black transition-all">
                    Cancel
                </button>
            </div>
        </div>

        <!-- Photo Grid -->
        @if (Model.TotalPhotos > 0)
        {
            <div class="mb-8">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-sm font-medium text-gray-900">Current Photos</h2>
                    <p class="text-xs text-gray-500 font-mono">Drag to reorder</p>
                </div>

                <div class="photo-grid" id="photoGrid">
                    @foreach (var photo in Model.Photos)
                    {
                        <div class="photo-item group" data-photo-num="@photo.Num" draggable="true"
                             ondragstart="handlePhotoStart(event)"
                             ondragend="handlePhotoEnd(event)">
                            <img src="https://picsum.photos/400/400?random=@photo.Num"
                                 alt="Photo @photo.Num" />

                            <div class="photo-actions">
                                <span class="text-white text-xs font-mono bg-black/30 px-2 py-1 rounded">
                                    #@photo.Num
                                </span>
                                <button type="button" onclick="deletePhoto(@Model.PlaceId, @photo.Num)"
                                        class="p-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition-colors">
                                    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-12 bg-gray-50 rounded-lg border border-gray-200">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <p class="mt-4 text-sm text-gray-500">No photos yet. Upload some to get started.</p>
            </div>
        }
    </div>

    <script>
        let uploadQueue = [];

        // Drag and drop for file upload
        function handleDragOver(e) {
            e.preventDefault();
            e.stopPropagation();
            document.getElementById('dropzone').classList.add('drag-over');
        }

        function handleDragLeave(e) {
            e.preventDefault();
            e.stopPropagation();
            document.getElementById('dropzone').classList.remove('drag-over');
        }

        function handleDrop(e) {
            e.preventDefault();
            e.stopPropagation();
            document.getElementById('dropzone').classList.remove('drag-over');

            const files = e.dataTransfer.files;
            addFilesToQueue(files);
        }

        function handleFileSelect(e) {
            const files = e.target.files;
            addFilesToQueue(files);
            e.target.value = ''; // Reset input
        }

        function addFilesToQueue(files) {
            const imageFiles = Array.from(files).filter(file => file.type.startsWith('image/'));

            if (imageFiles.length === 0) {
                alert('Please select image files only.');
                return;
            }

            imageFiles.forEach(file => {
                const fileId = Date.now() + Math.random();
                const fileItem = {
                    id: fileId,
                    file: file,
                    preview: null,
                    progress: 0,
                    status: 'pending' // pending, uploading, success, error
                };

                uploadQueue.push(fileItem);

                // Generate preview
                const reader = new FileReader();
                reader.onload = function(e) {
                    fileItem.preview = e.target.result;
                    renderQueue();
                };
                reader.readAsDataURL(file);
            });

            renderQueue();
        }

        function renderQueue() {
            const queueSection = document.getElementById('uploadQueue');
            const fileList = document.getElementById('fileList');
            const fileCount = document.getElementById('fileCount');

            if (uploadQueue.length === 0) {
                queueSection.classList.add('hidden');
                return;
            }

            queueSection.classList.remove('hidden');
            fileCount.textContent = uploadQueue.length;

            fileList.innerHTML = uploadQueue.map(item => `
                <div class="flex items-center gap-4 p-4 bg-gray-50 rounded-lg border border-gray-200" data-file-id="${item.id}">
                    <div class="flex-shrink-0 w-16 h-16 bg-gray-200 rounded overflow-hidden">
                        ${item.preview ? `<img src="${item.preview}" class="w-full h-full object-cover" />` :
                          '<div class="w-full h-full flex items-center justify-center"><svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg></div>'}
                    </div>
                    <div class="flex-1 min-w-0">
                        <p class="text-sm font-medium text-gray-900 truncate">${item.file.name}</p>
                        <p class="text-xs text-gray-500 font-mono">${formatFileSize(item.file.size)}</p>
                        ${item.status === 'uploading' ? `
                        <div class="mt-2">
                            <div class="w-full bg-gray-200 rounded-full h-1.5">
                                <div class="bg-black h-1.5 rounded-full transition-all duration-300" style="width: ${item.progress}%"></div>
                            </div>
                            <p class="text-xs text-gray-500 mt-1">${item.progress}%</p>
                        </div>
                        ` : item.status === 'success' ? `
                        <div class="mt-1 flex items-center gap-1 text-xs text-green-600">
                            <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
                            Uploaded
                        </div>
                        ` : item.status === 'error' ? `
                        <p class="mt-1 text-xs text-red-600">Upload failed</p>
                        ` : ''}
                    </div>
                    ${item.status === 'pending' ? `
                    <button type="button" onclick="removeFromQueue('${item.id}')" class="flex-shrink-0 p-2 text-gray-400 hover:text-red-600 transition-colors">
                        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                    ` : item.status === 'success' ? `
                    <div class="flex-shrink-0 p-2">
                        <svg class="h-5 w-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                    </div>
                    ` : ''}
                </div>
            `).join('');
        }

        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
        }

        function removeFromQueue(fileId) {
            uploadQueue = uploadQueue.filter(item => item.id != fileId);
            renderQueue();
        }

        function clearQueue() {
            if (confirm('Clear all files from upload queue?')) {
                uploadQueue = [];
                renderQueue();
            }
        }

        function cancelUpload() {
            uploadQueue = [];
            renderQueue();
        }

        function startUpload() {
            const uploadBtn = document.getElementById('uploadBtn');
            uploadBtn.disabled = true;

            // Simulate upload for each file
            uploadQueue.forEach((item, index) => {
                if (item.status !== 'pending') return;

                item.status = 'uploading';
                renderQueue();

                // Simulate progressive upload
                let progress = 0;
                const interval = setInterval(() => {
                    progress += Math.random() * 30;
                    if (progress >= 100) {
                        progress = 100;
                        item.progress = 100;
                        item.status = 'success';
                        clearInterval(interval);
                        renderQueue();

                        // Check if all uploads complete
                        if (uploadQueue.every(f => f.status === 'success' || f.status === 'error')) {
                            uploadBtn.disabled = false;
                            setTimeout(() => {
                                alert('All files uploaded! (This is just a UI prototype)');
                                // In real app, would reload the photo grid here
                            }, 500);
                        }
                    } else {
                        item.progress = Math.round(progress);
                        renderQueue();
                    }
                }, 200 + Math.random() * 300);
            });
        }

        // Drag and drop for photo reordering
        let draggedElement = null;

        function handlePhotoStart(e) {
            draggedElement = e.target.closest('.photo-item');
            e.dataTransfer.effectAllowed = 'move';
            draggedElement.style.opacity = '0.5';
        }

        function handlePhotoEnd(e) {
            if (draggedElement) {
                draggedElement.style.opacity = '1';
                draggedElement = null;
            }
        }

        // Add drag over handlers to photo items
        document.addEventListener('DOMContentLoaded', function() {
            const photoItems = document.querySelectorAll('.photo-item');

            photoItems.forEach(item => {
                item.addEventListener('dragover', function(e) {
                    e.preventDefault();
                    if (draggedElement && draggedElement !== this) {
                        const grid = document.getElementById('photoGrid');
                        const allItems = Array.from(grid.children);
                        const draggedIndex = allItems.indexOf(draggedElement);
                        const targetIndex = allItems.indexOf(this);

                        if (draggedIndex < targetIndex) {
                            this.parentNode.insertBefore(draggedElement, this.nextSibling);
                        } else {
                            this.parentNode.insertBefore(draggedElement, this);
                        }
                    }
                });

                item.addEventListener('drop', function(e) {
                    e.preventDefault();
                    // Save new order - implement later
                    console.log('New order:', Array.from(document.querySelectorAll('.photo-item')).map(el => el.dataset.photoNum));
                });
            });
        });

        function deletePhoto(placeId, photoNum) {
            if (confirm(`Are you sure you want to delete photo #${photoNum}?`)) {
                // Implement delete - for now just log
                console.log(`Delete photo ${photoNum} from place ${placeId}`);
                alert('Delete functionality coming soon!');
            }
        }
    </script>

</body>
</html>
